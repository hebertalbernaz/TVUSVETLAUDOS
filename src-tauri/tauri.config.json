{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TVUSVET LAUDOS",
  "version": "0.1.0",
  "identifier": "com.tvusvet.laudos",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn start",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "TVUSVET MULTI LAUDOS",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "acl": {
        "plugins": {
          "default": { "scopes": ["main"] }
        },
        "scopes": {
          "main": {
            "plugins": {
              "log": { "allow": ["default"] },
              "sql": { "allow": ["default"] }
            }
          }
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "log": {},
    "sql": {
      "sqlite:tvusvet.db": {
        "dbPath": "./tvusvet.db"
      }
    }
  }
}